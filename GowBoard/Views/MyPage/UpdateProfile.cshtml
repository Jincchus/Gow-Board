@{
    Layout = "~/Views/Shared/_MyPageLayout.cshtml";
    ViewBag.Title = "UpdateProfile Page";
}



<div id="sidebar-after">

    <section id="contact" class="contact mb-5">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-center  mb-5">
                <div class="col-lg-10">
                    <div class="form ">
                        <form method="post" role="form" id="update-profile-form" class="php-email-form" style="padding: 100px;">

                            <div class="row justify-content-center">
                                <div class="col-lg-8 text-center mb-5">
                                    <h1 class="page-title">Gow<br>Board</h1>
                                    <br>
                                    <h3 class="small-title">프로필 수정</h3>
                                </div>
                            </div>

                            <div class="row">
                                <p class="col-md-4 text-md-start">아이디</p>
                                <p class="col-md-8 text-md-start">@Model.Member.MemberId</p>
                            </div>

                            <div class="row">
                                <p class="col-md-4 text-md-start">이름</p>
                                <p class="col-md-8 text-md-start">@Model.Member.Name</p>
                            </div>


                            <div class="row">
                                <p class="col-md-4 text-md-start">* 현재 비밀번호</p>
                                <p class="col-md-8 text-md-end"></p>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="OriginPassword" id="OriginPassword" placeholder="Password" required>
                            </div>


                            <div class="row">
                                <p class="col-md-3 text-md-start">* 새 비밀번호</p>
                                <p class="col-md-8 text-md-end" id="Password-validation-text">8자 이상의 영문, 숫자, 특수문자를 사용해주세요</p>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="Password" id="Password" placeholder="Password">
                            </div>

                            <div class="row">
                                <p class="col-md-4 text-md-start">* 새 비밀번호 확인</p>
                                <p class="col-md-8 text-md-end" id="PasswordCheck-validation-text"></p>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="PasswordCheck" id="PasswordCheck" placeholder="Password Check">
                            </div>

                            <div class="row">
                                <p class="col-md-4 text-md-start">* 이메일</p>
                                <p class="col-md-8 text-md-end" id="Email-validation-text"></p>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-8">
                                    <input type="text" name="Email" class="form-control" id="Email" placeholder="Email" value="@Model.Member.Email" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="button" class="ajax-btn" id="Email-authentication-ajax-btn" style="width: 100%; height: 100%; font-family: serif;">인증번호 받기</button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-8">
                                    <input type="text" name="CheckNum" class="form-control" id="checkNum" placeholder="인증번호 6자리 숫자 입력" disabled>
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="button" class="ajax-btn" id="CheckNum-ok-btn" style="width: 100%; height: 100%; font-family: serif; display:none;">확인</button>
                                </div>
                            </div>

                            <div class="row">
                                <p class="col-md-4 text-md-start">* 닉네임</p>
                                <p class="col-md-8 text-md-end" id="Nickname-validation-text"></p>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-8">
                                    <input type="text" class="form-control" name="Nickname" id="Nickname" placeholder="Nickname" value="@Model.Member.Nickname" required/>
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="button" class="ajax-btn" id="Nickname-check-ajax-btn" style="width: 100%; font-family: serif;">중복 확인</button>
                                </div>
                            </div>


                            <div class="row">
                                <p class="col-md-4 text-md-start">(선택) 휴대폰 번호</p>
                                <p class="col-md-8 text-md-end" id="Phone-validation-text"></p>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Phone" value="@Model.Member.Phone">
                            </div>

                            <div class="text-center ">
                                <div class="">
                                    <button type="button" class="ajax-btn" id="update-profile-ajax-btn" style="width: 100%; font-family: serif;">수정 완료</button>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div><!-- End Contact Form -->
        </div>
    </section>
</div>
<script src="~/Scripts/member-js/update-profile-validation.js"></script>
<script src="~/Scripts/member-js/send-authentication-email.js"></script>
<script src="~/Scripts/member-js/update-profile-duplicated-check.js"></script>
<script src="~/Scripts/member-js/update-profile-ajax.js"></script>